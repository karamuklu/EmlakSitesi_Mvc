@model MVC_Emlak_Sitesi.Models.EMLAKCI_DETAY
@using MVC_Emlak_Sitesi.Models
@{
    EMLAK_SITESIEntities ent = new EMLAK_SITESIEntities();
    var sorumlular = ent.TBLSORUMLU.ToList();
}

@{
    ViewBag.Title = Model.EMLAKCI.ADI+" "+Model.EMLAKCI.SOYADI;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="sidebar span3">
            <h2 class="page-header">Hızlı Ara</h2>
            <div class="property-filter widget">
                <div class="content">
                    <form method="get" action="javascript:void(0);">
                        <div class="location control-group">
                            <label class="control-label">
                                Location
                            </label>

                            <div class="controls">
                                <select name="filter_location" id="selC6K" class="chzn-done" style="display: none;">
                                    <option>-</option>
                                    <option>Barney Circle</option>
                                </select>

                                <div id="selC6K_chzn" class="chzn-container chzn-container-single chzn-container-single-nosearch" style="width: 230px;" title="">
                                    <a href="javascript:void(0)" class="chzn-single" tabindex="-1"><span>-</span><div><b></b></div></a>

                                </div>
                            </div>
                            <!-- /.controls -->
                        </div>
                        <!-- /.control-group -->

                        <div class="type control-group">
                            <label class="control-label">
                                Type
                            </label>

                            <div class="controls">
                                <select name="filter_type" id="selM4H" class="chzn-done" style="display: none;">
                                    <option>-</option>
                                    <option>Apartment</option>

                                </select>
                                <div id="selM4H_chzn" class="chzn-container chzn-container-single chzn-container-single-nosearch" style="width: 230px;" title="">
                                    <a href="javascript:void(0)" class="chzn-single" tabindex="-1"><span>-</span><div><b></b></div></a>

                                </div>
                            </div>
                            <!-- /.controls -->
                        </div>
                        <!-- /.control-group -->


                        <div class="rent control-group">
                            <div class="controls">
                                <label class="checkbox">
                                    <div class="ez-checkbox"><input type="checkbox" value="rent" class="ez-hide"></div> Rent
                                </label>
                            </div>
                            <!-- /.controls -->
                        </div>
                        <!-- /.control-group -->

                        <div class="sale control-group">
                            <div class="controls">
                                <label class="checkbox">
                                    <div class="ez-checkbox">
                                        <input type="checkbox" value="sale" class="ez-hide">
                                    </div> Sale
                                </label>
                            </div>
                            <!-- /.controls -->
                        </div>
                        <!-- /.control-group -->

                        <div class="price-from control-group">
                            <label class="control-label">
                                Price From
                            </label>

                            <div class="controls">
                                <select name="filter_price_from" id="selATH" class="chzn-done" style="display: none;">
                                    <option value="">-</option>
                                    <option value="1000">1,000 €</option>

                                </select>
                                <div id="selATH_chzn" class="chzn-container chzn-container-single chzn-container-single-nosearch" style="width: 230px;" title="">
                                    <a href="javascript:void(0)" class="chzn-single" tabindex="-1"><span>-</span><div><b></b></div></a>
                                </div>
                                <!-- /.controls -->
                            </div>
                        </div>
                        <!-- /.control-group -->

                        <div class="price-to control-group">
                            <label class="control-label">
                                Price To
                            </label>

                            <div class="controls">
                                <select name="filter_price_to" id="selMRC" class="chzn-done" style="display: none;">
                                    <option value="">-</option>
                                    <option value="1000">1,000 €</option>
                                </select><div id="selMRC_chzn" class="chzn-container chzn-container-single chzn-container-single-nosearch" style="width: 230px;" title="">
                                    <a href="javascript:void(0)" class="chzn-single" tabindex="-1"><span>-</span><div><b></b></div></a>
                                </div>
                                <!-- /.controls -->
                            </div>
                        </div>
                        <!-- /.control-group -->

                        <div class="area-from control-group">
                            <label class="control-label">
                                Area From
                            </label>

                            <div class="controls">
                                <input type="text" value="" name="filter_area_from">
                            </div>
                            <!-- /.controls -->
                        </div>
                        <!-- /.control-group -->

                        <div class="area-to control-group">
                            <label class="control-label">
                                Area To
                            </label>

                            <div class="controls">
                                <input type="text" value="" name="filter_area_to">
                            </div>
                            <!-- /.controls -->
                        </div>
                        <!-- /.control-group -->

                        <div class="form-actions">
                            <button class="btn btn-primary btn-large">Filter now!</button>
                        </div>
                        <!-- /.form-actions -->

                    </form>
                </div>
                <!-- /.content -->
            </div>
            <!-- /.property-filter -->

            <div id="mostrecentproperties_widget-2" class="widget properties">

                <h2>Son Eklenen İlanlar</h2>
                <div class="content">
                    @Html.Partial("_SonEklenenler_Detay")
                </div>
                <!-- /.content -->

            </div>
            <div id="agencies_widget-2" class="widget agencies">
                <h2>Emlakçılarımız</h2>
                <div class="content">

                    @foreach (var item in sorumlular)
                    {
                        <div class="agency clearfix">
                            <div class="header">
                                <div class="image">
                                    <a href="/Anasayfa/EmlakciDetay/@item.ID">
                                        <img src="@item.RESIM" alt="@item.ADI @item.SOYADI">
                                    </a>
                                </div>
                                <!-- /.image -->
                                <div class="info">
                                    <a href="/Anasayfa/EmlakciDetay/@item.ID"><h2>@item.ADI @item.SOYADI</h2></a>
                                    <div class="properties-count">
                                        <span class="number">@item.TBLEMLAK.Count()</span> ilan
                                    </div>
                                    <!-- /.properties-count -->
                                    <a href="~/Anasayfa/EmlakciDetay/@item.ID " class="btn">Profili Gör</a>
                                </div>
                                <!-- /.info -->
                            </div>
                            <!-- /.header -->
                            <div class="address">
                                Adres<br />
                                Adres 2
                            </div>
                            <!-- /.address -->
                            <div class="email">
                                <a href="mailto:@item.EMAIL">@item.EMAIL</a>
                            </div>
                            <!-- /.email -->
                            <div class="phone">
                                @item.TEL_NO
                            </div>
                            <!-- /.phone -->
                        </div>
                        <!-- /.agency -->
                    }
                    <!-- /.content -->

                </div>
            </div>
           
        </div>


        <div id="main" class="span9">
            <h1 class="page-header">Asia İnşaat Emlak</h1>
            <div class="agency">
                <div class="row">
                    <div class="image span3">
                        <a href="#">
                            <img src="@Model.EMLAKCI.RESIM" alt="@Model.EMLAKCI.ADI @Model.EMLAKCI.SOYADI">
                        </a>
                    </div><!-- /.image -->

                    <div class="info span6">
                        <div class="box">
                            <div class="address">
                                Adres 1 <br>
                                Adres 2
                            </div><!-- /.address -->

                            <div class="email">
                                <a href="mailto:@Model.EMLAKCI.EMAIL">@Model.EMLAKCI.EMAIL</a>
                            </div><!-- /.email -->

                            <div class="phone">
                                @Model.EMLAKCI.TEL_NO
                            </div><!-- /.phone -->
                        </div><!-- /.box -->
                    </div><!-- /.info -->
                </div><!-- /.row -->

                <div class="row">
                    <div class="span9">
                        <h2>Emlakçı Hakkında</h2>

                        <p>@Model.EMLAKCI.ADI @Model.EMLAKCI.SOYADI</p>

                    </div><!-- /.span9 -->
                </div><!-- /.row -->
            </div><!-- /.agent -->

            <hr>

            <h2 class="page-header">İlgilendiği Emlaklar</h2>

            <div class="properties-grid">
                <div class="row-fluid">


                    @foreach (var item in Model.IlgilendigiEmlaklar)
                    {
                        <div class="span3" style="margin-bottom: 35px;">
                            <div class=" property">
                                <div class="image">
                                    <div class="content">
                                        <a href="/Anasayfa/EmlakDetay/@item.ILAN_NO">
                                            <div class="description">
                                                <p>
                                                    @item.ILAN_ICERIGI
                                                </p>
                                            </div>
                                            <img src="@item.TBLRESIM.FirstOrDefault().RESIM_YOLU" alt="@item.TBLRESIM.FirstOrDefault().ALT_ETIKETI">
                                        </a>
                                    </div><!-- /.content -->
                                    @if (item.SATILIK_KIRALIK == 1)
                                    {
                                        <div class="rent-sale" style="background-color:#f69679">
                                            <span>Kiralık</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="rent-sale">
                                            <span>Satılık</span>
                                        </div>
                                    }<!-- /.rent-sale -->

                                    <div class="price">
                                        @string.Format("{0:C}", item.FIYAT)
                                    </div><!-- /.price -->

                                </div><!-- /.image -->

                                <div class="info">
                                    <div class="title clearfix">
                                        <h2 style="height: 20px;">
                                            <a href="/Anasayfa/EmlakDetay/@item.ILAN_NO">
                                                @if (item.ILAN_BASLIGI.Length > 40)
                                                {
                                                    @item.ILAN_BASLIGI.Substring(0, 40)
                                                }

                                                else
                                                {
                                                    @item.ILAN_BASLIGI
                                                }
                                            </a>
                                        </h2>
                                    </div><!-- /.title -->

                                    <div class="location" style="margin-top: 10px;">
                                        @item.KONUMU
                                    </div><!-- /.location -->
                                </div><!-- /.info -->

                            </div><!-- /.property -->

                            <div class="property-info clearfix">
                                <div class="text-right">
                                    @item.ODA_SAYISI
                                </div>  <!-- /.bathrooms -->
                            </div><!-- /.property-info -->
                        </div>
                    }
                </div><!-- /.row -->
            </div><!-- /.properties -->
        </div>
    </div>
</div>
